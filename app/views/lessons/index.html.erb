<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm">
  
  <%= form_tag lessons_path, method: :get do %>
    <div class="row">
      <div class="col-sm-10">
        <div>
          Grades
          <%= select_tag :grade, options_for_select(@grades), class: "custom-select" %>
        </div><br>
        <div>
          Subjects
          <%= select_tag :subject, options_for_select(@subjects), class: "custom-select" %>
        </div><br>
        <div>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
      </div>
      <div class="col-sm-2"></div>
    </div> 
  <% end %>
  </div>

  <div class="col-sm">
  Lessons
    <ol>
      <% @lessons.each do |lesson| %>
	    <li><%= link_to lesson.title_content, lesson %></li>
	  <% end %>
    </ol>
  </div>
</div>
<br>

<%= link_to 'New Lesson', new_lesson_path %>
