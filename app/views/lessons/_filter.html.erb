<%= form_tag lessons_path, method: :get do %>
  <div class="row">
    <div class="col-sm-10">
      <div class="filter-list">
        Grades
        <ul>
          <% @grades.each do |grade| %>
            <% if params[:grade_id] == grade.id.to_s %>
              <li>
                <%= check_box_tag 'grade_id', grade.id, true %> <span><%= grade.name %></span>
              </li>
            <% else %>
              <li>
                <%= check_box_tag 'grade_id', grade.id %> <span><%= grade.name %></span>
              </li>
            <% end %>
          <% end %>
        </ul>
        Subjects
        <ul>
          <% @subjects.each do |subject| %>
            <% if params[:subject_id] == subject.id.to_s %>
              <li>
                <%= check_box_tag 'subject_id', subject.id, true %> <span><%= subject.name %></span>
              </li>
            <% else %>
              <li>
                <%= check_box_tag 'subject_id', subject.id %> <span><%= subject.name %>
              </li>
            <% end %>
          <% end %>
        </ul>
        <%= submit_tag "Filter", class: "btn btn-primary" %>
      </div>
    </div>
    
    <div class="col-sm-2">
    </div> 
  </div>
<% end %>